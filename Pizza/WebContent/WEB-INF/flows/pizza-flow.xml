<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                        http://www.springframework.org/schema/webflow/spring-webflow.xsd"
	start-state="identifyCustomer">



	<var name="order" class="com.springinaction.pizza.domain.Order" />
	<subflow-state id="identifyCustomer"
		subflow="pizza/customer">
		<output name="customer" value="output.customer" />
		<transition on="customerReady" to="buildOrder" />
	</subflow-state>

	<subflow-state id="buildOrder" subflow="pizza/order">
		<input name="order" value="order" />
		<transition on="orderCreated" to="takePayment" />
	</subflow-state>

	<subflow-state id="takePayment" subflow="pizza/payment">
		<input name="order" value="order" />
		<transition on="takePayment" to="saveOrder" />
	</subflow-state>

	<action-state id="saveOrder">
		<!-- <secured attributes="ROLE_ADMIN" match="any"/> -->
		<evaluate expression="pizzaFlowActions.saveOrder(order)" />
		<transition to="thankCustomer" />
	</action-state>

	<view-state id="thankCustomer">
		<transition to="endState" />
	</view-state>

	<end-state id="endState" />

	<global-transitions>
		<transition on="cancel" to="endState"></transition>
	</global-transitions>

</flow>